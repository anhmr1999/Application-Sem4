<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".KnowledgeActivity"
    android:layout_height="match_parent"
    android:background="@drawable/knowledge_background">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/back"
        android:onClick="BackToMainActivity"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="50dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/knowledge_logo"
            android:layout_marginBottom="80dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/play"
            android:onClick="PlayKnowledge"
            android:textSize="25dp"
            android:background="@drawable/common_bg_button"
            android:layout_marginBottom="8dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/level"
            android:textSize="25dp"
            android:onClick="ChangeLevel"
            android:background="@drawable/common_bg_button"
            android:layout_marginBottom="8dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/hightScore"
            android:onClick="viewScore"
            android:textSize="25dp"
            android:background="@drawable/common_bg_button"
            android:layout_marginBottom="8dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/questionManager"
            android:onClick="showQuestionManager"
            android:textSize="25dp"
            android:background="@drawable/common_bg_button"
            android:layout_marginBottom="8dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/manual"
            android:onClick="viewManual"
            android:textSize="25dp"
            android:background="@drawable/common_bg_button"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/flashScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="#4F4C4C4C">

        <ProgressBar
            android:id="@+id/progressBar2"
            android:layout_centerInParent="true"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>