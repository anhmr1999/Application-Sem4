<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/manualLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_2048">

    <RelativeLayout
        android:id="@+id/back_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:onClick="BackToHome"
            android:src="@drawable/back"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/back_block"
        android:layout_height="match_parent"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp">

        <ScrollView
            android:id="@+id/manualContent"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="23dp"
                    android:gravity="center"
                    android:text="Knowledge is power"/>

                <TextView
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text=" - Khi bắt đầu trò chơi, bạn sẽ có 1 khoảng thời gian để đọc và đưa ra đáp án của mình.
Bấm chọn vào ô đáp án và chờ trò chơi đưa ra đáp án chính xác"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        android:src="@drawable/bird"
                        android:layout_marginRight="10dp"/>

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="1dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        android:src="@drawable/bird"/>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(hình minh họa)"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_margin="5dp"/>

                <TextView
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" - Mỗi đáp án chính xác, bạn sẽ nhận được 5 điểm. Nếu bạn chọn sai
hoặc hết thời gian, trò chơi sẽ ngay lập tức kết thúc"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:text=" - Ở giao diện chính của trò chơi, bạn có thể bấm vào ô độ khó để thay đổi độ khó
cho trò chơi. Độ khó càng cao thì thời gian càng thấp, cụ thể như sau:"/>

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="1dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:src="@drawable/bird"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:text=" + Dễ: 20s để trả lời"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:text=" + Trung bình: 15s để trả lời"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:text=" + Khó: 10s để trả lời"
                    />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/help5050"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="10dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/help5050"/>

                        <TextView
                            android:textSize="17dp"
                            android:layout_toLeftOf="@id/help5050"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text=" + 50/50: Loại bỏ ngẫu nhiên 2 đáp án sai( chỉ dùng được 1 lần )"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/helpSkip"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="10dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/skip_question"/>

                        <TextView
                            android:textSize="17dp"
                            android:layout_toLeftOf="@id/helpSkip"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text=" + Bỏ qua: Bỏ qua câu hỏi và nhận được điểm của câu hỏi bỏ qua
                            (chỉ dùng được 1 lần)"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/helpReload"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="10dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/reload"/>

                        <TextView
                            android:textSize="17dp"
                            android:layout_toLeftOf="@id/helpReload"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text=" + Thay đổi: Cho phép bạn đổi câu hỏi, nhưng sẽ không nhận được điểm của
câu hỏi đó"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="1dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:src="@drawable/bird"/>

                    <TextView
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:text=" - Đôi khi bạn muốn xem lại điểm của bản thân và những người chơi khác?
Hãy chọn ô điểm cao để xem lại thành tích của mình cũng như những người chơi khác nhé!"
                        />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </RelativeLayout>

</RelativeLayout>