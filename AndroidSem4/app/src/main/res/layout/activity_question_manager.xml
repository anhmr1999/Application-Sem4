<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/knowledge_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:onClick="BackToHome"
                android:src="@drawable/back"/>

            <Button
                android:id="@+id/btnQuestionUpload"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:text="@string/uploadquestion"
                android:textColor="#000"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/bg_download"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btnQuestionDownload"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/btnQuestionUpload"
                android:text="@string/downloadmore"
                android:textColor="#000"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/bg_download"
                android:textAllCaps="false"
                android:onClick="DownloadQuestion"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/questionInput"
                        android:layout_width="match_parent"
                        android:inputType="text|textMultiLine"
                        android:gravity="top"
                        android:hint="@string/question"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:background="@drawable/bg_edittext"
                        android:textColor="#000"
                        android:textColorHint="#353535"
                        android:layout_height="110dp"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:id="@+id/answerNo1Correct"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="@string/correct"
                        android:layout_alignParentRight="true"
                        android:onClick="selectCorrectAnswer"
                        android:textColor="#000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="@string/answer1"
                        android:textColor="#000"/>

                    <EditText
                        android:id="@+id/answerNo1Input"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="20dp"
                        android:gravity="top"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:background="@drawable/bg_edittext"
                        android:inputType="text|textMultiLine"
                        android:textColor="#000" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:id="@+id/answerNo2Correct"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="@string/correct"
                        android:layout_alignParentRight="true"
                        android:onClick="selectCorrectAnswer"
                        android:textColor="#000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="@string/answer2"
                        android:textColor="#000"/>

                    <EditText
                        android:id="@+id/answerNo2Input"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="20dp"
                        android:gravity="top"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:background="@drawable/bg_edittext"
                        android:inputType="text|textMultiLine"
                        android:textColor="#000"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:id="@+id/answerNo3Correct"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="@string/correct"
                        android:layout_alignParentRight="true"
                        android:onClick="selectCorrectAnswer"
                        android:textColor="#000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="@string/answer3"
                        android:textColor="#000"/>

                    <EditText
                        android:id="@+id/answerNo3Input"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="20dp"
                        android:gravity="top"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:background="@drawable/bg_edittext"
                        android:inputType="text|textMultiLine"
                        android:textColor="#000" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:id="@+id/answerNo4Correct"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="@string/correct"
                        android:layout_alignParentRight="true"
                        android:onClick="selectCorrectAnswer"
                        android:textColor="#000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="@string/answer4"
                        android:textColor="#000"/>

                    <EditText
                        android:id="@+id/answerNo4Input"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="20dp"
                        android:gravity="top"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:background="@drawable/bg_edittext"
                        android:inputType="text|textMultiLine"
                        android:textColor="#000"/>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/waitingScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5C000000"
        android:visibility="invisible">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
</RelativeLayout>