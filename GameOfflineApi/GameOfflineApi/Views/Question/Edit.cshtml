@model GameOfflineApi.Models.EntityManagers.Entities.Question

@{
    ViewBag.Title = "Edit";
}

@section  styles{
    <style>
        textarea {
            display: block;
            width: 100%;
            max-width: 100%;
            min-width: 100%;
            min-height: 100px;
            padding: 5px;
            font-size: 1.8rem;
        }
    </style>
}

<div class="row">
    <div class="col-lg-12 form-group">
        <h2>Chỉnh sửa câu hỏi</h2>
    </div>
    <div class="col-lg-12 form-group">
        <label>Câu hỏi:</label>
        <textarea>@Model.Content</textarea>
    </div>
    <div class="col-lg-12">
        <div class="row">
            @foreach (var item in Model.Answers)
            {
                <div class="col-md-6 form-group">
                    <label><input type="checkbox" @(item.Correct ? "checked" : "") /> Đáp án đúng</label>
                    <textarea>@item.Content</textarea>
                </div>
            }
        </div>
    </div>
    <div class="col-lg-12 form-group" style="margin-top: 20px">
        <div class="row">
            <div class="col-md-6">
                <label><input type="checkbox" @(Model.Active ? "checked disabled" : "") /> Phê duyệt câu hỏi</label>
            </div>
            <div class="col-md-6 text-right">
                <button class="btn btn-danger">Hủy bỏ</button>
                <button class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>